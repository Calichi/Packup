<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mv="clr-namespace:Packup.ModelView"
             xmlns:view="clr-namespace:Packup.View"
             x:Class="Packup.Page.OperationPage"
             Title="OperationPage"
             IsVisible="{Binding TagsLoadEnabled, Mode=OneWayToSource}">

    <ContentPage.BindingContext>
        <Binding Path="SharedModelView">
            <Binding.Source>
                <mv:OperationsSharedModelView/>
            </Binding.Source>
        </Binding>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout>
        
        <Label BindingContext="{Binding SelectedLote}"
            Text="{Binding Id}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <ListView ItemsSource="{Binding Tags}"/>
        
    </VerticalStackLayout>
</ContentPage>